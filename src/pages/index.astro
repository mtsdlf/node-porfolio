---
import Layout from '../layouts/Layout.astro'
import Badge from '../components/Badge.astro'
import SocialPill from '../components/SocialPill.astro'
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import GitHubIcon from '../components/icons/Github.astro'
import WhatsappIcon from '../components/icons/Whatsapp.astro'
import MailIcon from '../components/icons/Mail.astro'
import Experience from '../components/Experience.astro'
import SectionContainer from '../components/SectionContainer.astro'
import BriefCaseIcon from '../components/icons/BriefCase.astro'
import CodeIcon from '../components/icons/Code.astro'
---

<Layout 
	title="Portfolio de Matias De La Fuente - Desarrollador y programador"
	description='Contrata a Matias de La Fuente, desarrollador y Programador'
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img
				class="rounded-full size-12 mb-4"
				src="https://media.licdn.com/dms/image/D4D03AQGKwdt6JKEx8Q/profile-displayphoto-shrink_800_800/0/1698968415477?e=1710979200&v=beta&t=UZBZcy3S_qfvsqQ6zBvZBdx7Dh6rSl8qe64-sHAYajM"
				alt="Matias Photo"
			>
			<h1 
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hola! Soy Matias
				<a 
					href="https://www.linkedin.com/in/matias-dela/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center hover:scale-105 transition|">
					<Badge>Disponible para trabajar</Badge>	
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span>
					+10 a√±os de experiencia
				</span>
				<span>
					Full-Stack Developer
					Cloud Solution Architect
					Dev Ops
				</span>
				<span class="text-sky-300/95">
					De Buenos Aires, Argentina
				</span>
				<span class="opacity-75">
					Especializado en sarasa
				</span>
			</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/matias-dela/"> 
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/mtsdlf/"> 
					<GitHubIcon class="size-4 md:size-6" />
					GitHub	
				</SocialPill>	
				<SocialPill href="https://wa.link/uh57or" >
					<WhatsappIcon class="size-4 md:size-6" />
					Whatsapp
				</SocialPill>
				<SocialPill href="mailto:mts.dlf@gmail.com" >
					<MailIcon class="size-4 md:size-6" />
					mts.dlf@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>		
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCaseIcon class="size-7"/>
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7"/>
				Proyectos
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>